}

LoadingSpinner{
	position: absolute;
	top: 8px;
	right: -4px;

}
.loading-spinner {
	top: -8px;
	left: -8px;
	width: 16px;
	height: 16px;
}

#tkpm-package-source-header {
	position: absolute;
	left: 0px;
	right: 0px;
	border-left-width: 0px;
